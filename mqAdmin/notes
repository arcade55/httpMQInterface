using:

docker run -i --entrypoint=/bin/bash --volume hostgettermdepositdetails_devcontainer_qmdata:/mnt/mqm ibmcom/mq:latest < selfCertCreation.sh 



contents of ascript.sh
cd /mnt/mqm
mkdir -p MQServer/certs
